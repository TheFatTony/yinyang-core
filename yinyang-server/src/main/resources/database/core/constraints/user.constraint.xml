<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9 http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">

    <changeSet author="thefattony" id="user-id-nn">
        <addNotNullConstraint columnDataType="bigint" columnName="id" tableName="user"/>
    </changeSet>

    <changeSet author="thefattony" id="user-name-nn">
        <addNotNullConstraint columnDataType="varchar(255)" columnName="name" tableName="user"/>
    </changeSet>

    <changeSet author="thefattony" id="user-password-nn">
        <addNotNullConstraint columnDataType="varchar(255)" columnName="password" tableName="user"/>
    </changeSet>


    <changeSet author="thefattony" id="user-id-aa">
        <addAutoIncrement columnDataType="bigint" columnName="id" tableName="user"/>
    </changeSet>

</databaseChangeLog>